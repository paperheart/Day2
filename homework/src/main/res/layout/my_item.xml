<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@color/colorBackground"
    android:paddingRight="12dp"
    android:clickable="true"
    >

    <chapter.android.aweme.ss.com.homework.widget.CircleImageView
        android:id="@+id/ph_icon"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <TextView
        android:id="@+id/ph_id"
        android:textSize="13sp"
        android:paddingLeft="2dp"
        android:textColor="@color/white"
        android:text="抖音小助手"
        android:layout_marginTop="17dp"
        android:layout_toRightOf="@id/ph_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/ph_message"
        android:text="123123456"
        android:textColor="@color/white"
        android:layout_below="@id/ph_id"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/ph_icon"
        android:paddingLeft="2dp"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="yesterday"
        android:id="@+id/ph_time"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    </RelativeLayout>